</script>

  <script>
    $(document).ready(function() {
      new ClipboardJS('#copyCNAME');

      let input = document.querySelector('#url');
      let cname = document.querySelector('#cname');

      input.addEventListener('input', function(event) {
        cname.value = tranformURLtoCNAME(event.currentTarget.value);
      });

      function tranformURLtoCNAME(urlStr) {
        if (!urlStr) return '';
        let url;

        try {
          url = new URL(urlStr);
        } catch(e) {
          return '';
        }

        return url.hostname
          + (url.pathname + url.search + url.hash)
            .replace(/\./g, '.opts-dot.')
            .replace(/\//g, '.opts-slash.')
            .replace(/\?/g, '.opts-query.')
            .replace(/=/g, '.opts-eq.')
            .replace(/\+/g, '.opts-plus.')
            .replace(/%/g, '.opts-percent.')
            .replace(/#/g, '.opts-hash.')
            .replace(/\.\./g, '.')
            .replace(/([^.])$/, '$1.')
          + (url.protocol === 'https:' ? 'opts-https.' : '')
          + '<%= config.fqdn %>.'
      }
    });
  </script>

